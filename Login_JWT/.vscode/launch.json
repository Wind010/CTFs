    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Default Node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server\\server.js"
        },
        {
            "name": "Launch via NPM dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}\\server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "dev"
            ],
            "port": 3000
        }
    ]
}